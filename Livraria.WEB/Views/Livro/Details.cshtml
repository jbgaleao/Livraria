@model Livraria.DATA.Models.Livro

@{
    ViewData["Title"] = "Detalhes do Livro";
}
<html>
<head>
    <link rel="stylesheet" href="~/css/pessoal.css" />
</head>
<body>
    <h1>Detalhes do Livro</h1>
    <hr />
    <div>
        <a class="btn btn-primary" asp-action="Index">Voltar...</a>
    </div>
    <br />
    <div class="row">
        <div class="col-md">
            <form asp-action="Details">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="card">
                    <div class="card-header alert-secondary" style="font-style:italic;" icon="~/images/person-check-fill.svg">
                        <img class="card-img-top imagemHeaderCard" src="~/images/person.svg" />
                        Dados do Autor
                    </div>
                    <div class="card-body row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Autor" class="control-label"></label>
                                <input disabled asp-for="Autor"  class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>
                <br />
                <div class="card">
                    <div class="card-header alert-secondary" style="font-style:italic;" icon="~/images/person-check-fill.svg">
                        <img class="card-img-top imagemHeaderCard" src="~/images/book.svg" />
                        Dados do Livro
                    </div>
                    <div class="card-body row">
                        <div class="col-md">
                            <div class="form-group">
                                <label asp-for="Nome" class="control-label"></label>
                                <input disabled asp-for="Nome" class="form-control" />
                            </div>

                            <div class="form-group ">
                                <label asp-for="Editora" class="control-label"></label>
                                <input disabled asp-for="Editora" class="form-control" />
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="AnoPublicacao" class="control-label"></label>
                                <input disabled asp-for="AnoPublicacao" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label asp-for="Edicao" class="control-label"></label>
                                <input disabled asp-for="Edicao" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>
</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
